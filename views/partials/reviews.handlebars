<div class="row mt-4">
  <div class="col-md-6">

    <h3 class="reviews-text">Reviews</h3>
    {{#if reviews}}
    <h3>Muscle Hustler's Reviews</h3>
   <div class = "gd-reviews"> 
{{!-- Review section of application --}}
      {{#each reviews as |review|}}
        <div class="card card-body mb-2">
         {{!-- Referencing models for review --}}
          <h4>{{review.title}}</h4>
          <p>{{review.review}}</p>
        </div>
        <form class="reply-comment-form"  data-id={{review.id}}>
          <input>

          </input>
          {{!-- Reply button --}}
          <button type="submit">Reply</button>

        </form>
      {{/each}}

    {{/if}}
    <div class="reviews">
    <h3>Write your Review below:</h3>


   </div>


    {{#if logged_in}}
    <h3>Post your Review below:</h3>
{{!-- Section where User can write their review --}}
    <form class="form new-review-form" id ="new-review-form">
      <div class="form-group">
        <label for="review-name">Review Title</label>
        <input
          class="form-input"
          type="text"
          id="review-name"
          name="review-name"
        />
      </div>
      <div class="form-group">
        <label  for="review-desc">Review Description</label>
        <textarea
          class="form-input"
          id="review-desc"
          name="review-desc"
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>

    </div>

    {{/if}}

  </div>
</div>