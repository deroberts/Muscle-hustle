<div class="row mt-4">
  <div class="col-md-6"> 
    <h3>Reviews</h3>
    {{#each reviews}}
      <div class="card card-body mb-2">
        <h4>{{this.title}}</h4>
        <p>{{this.review}}</p>
        {{!-- <p>Created by {{this.user.name}} on {{this.date_created}}</p> --}}
      </div>
    {{/each}}
    <h3>Write your Review below:</h3>

    <form class="form new-review-form">
      <div class="form-group">
        <label for="review-name">Review Title</label>
        <input class="form-input" type="text" id="review-name" name="review-name" />
      </div>
      <div class="form-group">
        <label for="review-desc">Review Descrirption</label>
        <textarea class="form-input" id="review-desc" name="review-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
      <p>Created by {{review.user.name}} on {{review.date_created}}</p>
    </form>
  </div>
